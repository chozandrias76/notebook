<% if @graphics.any? %>
  <%= render partial: 'content/components/list_filter_bar', locals: { } %>

  <div class="row">
    <% @graphics.each.with_index do |graphic, i| %>
      <% if i % 3 == 0 %>
        <div style="clear: both;" class="hide-on-small-only"></div>
      <% end %>
      <div class="col s12 m4 l4">
        <div class="card sticky-action">
          <div class="card-image waves-effect waves-block waves-light">
            <%= image_tag "card-headers/graphic-mini.jpg", class: 'activator' %>
          </div>
          <div class="card-content">
            <span class="card-title activator grey-text text-darken-4">
              <%= graphic.title.presence || 'Untitled graphic' %>
            </span>
            <p class="grey-text">
              ~<%= pluralize 1 + ((graphic.body || "").split(/\s+/).count / 200).to_i, 'minute' %> read
              <br />
              <%= graphic.created_at == graphic.updated_at ? 'created' : 'updated' %>
              <%= time_ago_in_words graphic.updated_at %>
              ago
            </p>
          </div>
          <div class="card-action nice-icon-links">
            <%= link_to edit_graphic_path(graphic), class: 'green-text right' do %>
              <i class="material-icons"><%= Graphic.icon %></i> Edit
            <% end %>
            <%= link_to graphic_path(graphic), class: 'blue-text text-lighten-1' do %>
              <i class="material-icons"><%= Graphic.icon %></i> View
            <% end %>
          </div>
          <div class="card-reveal">
            <span class="card-title grey-text text-darken-4">
              <%= graphic.title.presence || 'Graphic preview' %>
              <i class="material-icons right">close</i>
            </span>
            <p>
              <%= sanitize truncate(graphic.body || '<em>This graphic is blank.</em>', escape: false, length: 420) %>
            </p>
          </div>
        </div>
      </div>
      <% end %>
  </div>
<% end %>

<% if @graphics.empty? %>
<div class="row">
  <div class="col s12 m8 offset-m2">
    <div class="hoverable card center" style="margin: 50px 0; padding: 50px 0; border-bottom: 10px solid <%= Graphic.hex_color %>">
      <h4>You haven't created any graphics yet!</h4>
      <h1>
        <i class="material-icons <%= Graphic.color %>-text" style="font-size: 200%">
          <%= Graphic.icon %>
        </i>
      </h1>
      <p>
        You can create an unlimited number of graphics with no limits on length. Enjoy!
      </p>
      <br />
      <%= link_to "Create your first graphic", edit_graphic_path(:new), class: "btn #{Graphic.color}" %>
    </div>
  </div>
</div>
<% end %>
