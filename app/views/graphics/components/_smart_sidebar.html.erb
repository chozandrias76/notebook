<% if current_user && @graphic.updatable_by?(current_user) %>
  <div class="card blue-grey lighten-4">
    <div class="card-content">
      <span class="card-title grey-text text-darken-4">
        This graphic
        <i class="material-icons right activator" style="cursor: pointer">settings</i>
      </span>
      <ul>
        <li>&middot; Written by <%= link_to @graphic.user.name, @graphic.user %>
        <!--
        <li>
          &middot; Visibility:
          <a href="#" class="tooltipped" data-tooltip="Sharing graphics is coming soon.">Private</a>
        </li>
        -->
        <li>&middot; Created <%= time_ago_in_words @graphic.created_at %> ago</li>
        <li>&middot; Last edited <%= time_ago_in_words @graphic.updated_at %> ago</li>
      </ul>
      <p class="blue-text">
        This card is only visible to you.
      </p>
    </div>
    <div class="card-reveal">
      <span class="card-title grey-text text-darken-4">
        Settings<i class="material-icons right">close</i>
      </span>
      <ul>
        <li>
          <% if @graphic.persisted? && current_user.can_delete?(@graphic) %>
            <%= link_to @graphic,
              method: :delete,
              class: 'small btn red white-text',
              data: {
                confirm: "Are you sure? This will permanently delete this entire graphic!"
              } do
            %>
              Delete this graphic
            <% end %>
          <% end %>
        </li>
      </ul>
    </div>
  </div>
<% end %>
